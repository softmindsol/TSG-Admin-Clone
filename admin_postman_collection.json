{
  "info": {
    "name": "TSG Admin API Collection",
    "description": "Postman collection for TSG Backend Admin endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"adminpassword\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/admin/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "admin",
            "login"
          ]
        }
      }
    },
    {
      "name": "Get Agent Requests (Pending)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/agents?status=pending",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "admin",
            "agents"
          ],
          "query": [
            {
              "key": "status",
              "value": "pending",
              "description": "Filter agents by status: pending, approved, rejected, or 'all' for no filter"
            }
          ]
        }
      }
    },
    {
      "name": "Get All Approved Agents",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/agents?status=approved",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "admin",
            "agents"
          ],
          "query": [
            {
              "key": "status",
              "value": "approved"
            }
          ]
        }
      }
    },
    {
      "name": "Get All Agents (No Filter)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/agents?status=all",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "admin",
            "agents"
          ],
          "query": [
            {
              "key": "status",
              "value": "all"
            }
          ]
        }
      }
    },
    {
      "name": "Approve Agent",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/approve-agent/:agentId",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "admin",
            "approve-agent",
            ":agentId"
          ],
          "variable": [
            {
              "key": "agentId",
              "value": "agent_id_here"
            }
          ]
        }
      }
    },
    {
      "name": "Reject Agent",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/reject-agent/:agentId",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "admin",
            "reject-agent",
            ":agentId"
          ],
          "variable": [
            {
              "key": "agentId",
              "value": "agent_id_here"
            }
          ]
        }
      }
    },
    {
      "name": "Delete Agent",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/delete-agent/:agentId",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "admin",
            "delete-agent",
            ":agentId"
          ],
          "variable": [
            {
              "key": "agentId",
              "value": "agent_id_here"
            }
          ]
        }
      }
    },
    {
      "name": "Get Agent Payment Info",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/agent/payment-info/:agentId",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "admin",
            "agent",
            "payment-info",
            ":agentId"
          ],
          "variable": [
            {
              "key": "agentId",
              "value": "agent_id_here"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    }
  ]
}